{
    "compilerOptions": {
        "target": "ES2016",
        "module": "commonjs",
        "allowJs": false,
        "sourceMap": true,
        "removeComments": true,
        // "strict": true,
        "strictNullChecks":true,
        "noImplicitThis":true,
        "alwaysStrict":true,
        "noImplicitAny": true,
        // "moduleResolution": "node",
        // "preserveConstEnums": true,
        "outDir": "./dist", 
        "types": [
            "node"
          ]
    },
    "compileOnSave": true,
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}